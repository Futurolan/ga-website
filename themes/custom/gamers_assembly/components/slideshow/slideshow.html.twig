{{ attach_library('gamers_assembly/gamers_assembly.slideshow') }}

<div class="slideshow">
    <div class="home-slider-container">
        {% for slide in slides %}
            <figure>
                <a href="{{ slide.link }}">
                    {% if(slide.video) %}
                        <div class="video-container">
                            <img src="{{ file_url(slide.image) }}" alt="{{ slide.name }}" class="img-responsive">
                            <video muted autoplay loop>
                                <source src="{{ file_url(slide.video) }}" type="video/mp4"/>
                            </video>
                        </div>
                    {% else %}
                        <img src="{{ file_url(slide.image) }}" alt="{{ slide.name }}" class="img-responsive">
                    {% endif %}
                </a>
            </figure>
        {% endfor %}
    </div>
</div>