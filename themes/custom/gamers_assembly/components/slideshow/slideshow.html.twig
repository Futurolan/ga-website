{{ attach_library('gamers_assembly/gamers_assembly.slideshow') }}

<div class="slideshow">
    <div class="home-slider-container">
        {% for slide in slides %}
            <figure>
                <a href="{{ slide.link }}">
                    {% if(slide.video) %} %}
                        <video src="{{ file_url(slide.video) }}" poster=" {{ file_url(slide.image) }}"></video>
                    {% else %}
                        <img src="{{ file_url(slide.image) }}" alt="{{ slide.name }}" class="img-responsive">
                    {% endif %}
                </a>
            </figure>
        {% endfor %}
    </div>
</div>