<div class="influencer">

    <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
        <div class="flipper">
            <div class="front">
                <img src="{{ file_url(cropped_image) }}">
            </div>
            <div class="back">
                <h3>{{ node.getTitle() }}</h3>
                <div class="description">
                    {{ node.field_influencer_description.value|raw }}
                </div>
            </div>
        </div>
    </div>
</div>
