                {% include directory ~ '/components/ticketing-home-cta/ticketing-home-cta.html.twig' %}
            </div>
        </div>
    </div>
</div>

<div class="blue-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6 node-news-home">
                        <h2 class="title-line decorated">
                            <span>
                                {{ "Dernier actualités"|t }} <span class="mushroom"></span>
                            </span>
                        </h2>
                        {% for new in news %}
                            {% if (loop.first) %}
                                <div class="row news-main">
                                    <div class="col-md-12">
                                        <div class="news-image league-of-legends">
                                        </div>
                                        <div class="news-type league-of-legends">
                                            League of Legends
                                        </div>
                                        <div class="news-background">
                                            <div class="news-title">
                                                FuturoLAN organise la Breaking LAN 2016
                                            </div>
                                            <div class="news-date">09/08/2016</div>
                                            <div class="news-content">Cette année a été une année exceptionnelle pour la
                                                Gamers
                                                Assembly ! Plus de 19 000 entrées et 1837 joueurs se sont réunis au Parc
                                                des
                                                Expositions de Poitiers du 26 au 28 mars 2016 à l'occasion de la plus
                                                grande LAN
                                                de France. Un peu plus d'une semaine après la fin de cet événement,
                                                (re)découvrez qui sont les grands vainqueurs de cette GA2016 !
                                            </div>
                                            <div class="news-more">
                                                <span>Lire la suite</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="row news">
                                    <a href="#">
                                        <div class="col-md-6">
                                            <div class="news-image league-of-legends">
                                                <div class="news-overlay">
                                                    Titre de la news
                                                </div>
                                            </div>
                                            <div class="news-type league-of-legends">
                                                League of Legends
                                            </div>
                                        </div>
                                    </a>
                                    <a href="#">
                                        <div class="col-md-6">
                                            <div class="news-image league-of-legends">
                                                <div class="news-overlay">
                                                    Titre de la news
                                                </div>
                                            </div>
                                            <div class="news-type league-of-legends">
                                                League of Legends
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="col-md-4">
                        <h2 class="title-line decorated">
                            <span>
                                {{ "Inscriptions"|t }}
                            </span>
                        </h2>
                        <div class="row signup">
                            <div class="col-md-12">
                                <div class="status">
                                    Status
                                </div>
                                <div class="tournaments">
                                    <!-- TODO : WHILE -->
                                    <div class="row">
                                        <div class="col-md-2 tag league-of-legends">
                                            LoL
                                        </div>
                                        <div class="col-md-10 name">
                                            <div class="progress-current low" style="width: 15%;"></div>
                                            <div class="title">League of Legends</div>
                                        </div>
                                    </div>
                                    <div class="separator"></div>
                                    <div class="row">
                                        <div class="col-md-2 tag league-of-legends">
                                            LoL
                                        </div>
                                        <div class="col-md-10 name">
                                            <div class="progress-current medium" style="width: 50%"></div>
                                            <div class="title">League of Legends</div>
                                        </div>
                                    </div>
                                    <div class="separator"></div>
                                    <div class="row">
                                        <div class="col-md-2 tag league-of-legends">
                                            LoL
                                        </div>
                                        <div class="col-md-10 name">
                                            <div class="progress-current high" style="width: 75%"></div>
                                            <div class="title">League of Legends</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

