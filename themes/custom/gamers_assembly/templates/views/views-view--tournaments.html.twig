{% set classes = [
dom_id ? 'js-view-dom-id-' ~ dom_id,
] %}
<div class="views-tournaments">
    <div {{ attributes.addClass(classes) }}>
        <div class="grey-area">
            <div class="container-fluid">
                <div class="row title-line">
                    <div class="col-md-12 decorated">
                        <h2><span>{{ "Tous les tournois"|t }}</span></h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="white-area">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <div class="row">
                            {{ rows }}
                        </div>
                    </div>
                    <div class="col-md-4">
                        {{ exposed }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

