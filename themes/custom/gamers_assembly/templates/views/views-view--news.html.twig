{% set classes = [
dom_id ? 'js-view-dom-id-' ~ dom_id,
] %}
<div class="views-news">
    <div {{ attributes.addClass(classes) }}>
        <div class="grey-area">
            <div class="container-fluid">
                <div class="row title-line">
                    <div class="col-md-12 decorated">
                        <h2><span>{{ "Filtres"|t }}</span></h2>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        {{ exposed }}
                    </div>
                </div>
            </div>
        </div>
        <div class="white-area">
            <div class="container-fluid">
                <div class="row title-line headline">
                    <div class="col-md-12 decorated">
                        <h2>                            
                            <span>
                                {{ "Dernières actualités"|t }} <span class="mushroom black"></span>
                            </span>
                        </h2>
                    </div>
                </div>
            </div>
            <div class="container">
                {{ rows }}
            </div>
        </div>
    </div>
</div>

