<div class="news-home2">
    {% include directory ~ '/components/title-line/title-line.html.twig' with {
    title:"Actualités"|t
    } only %}
    <div class="hack-line-left"></div>
    <div class="hack-line-right"></div>


    {% for new in news %}
        <div class="row news-main">
            <a href="{{ new.url }}">
                <div class="col-md-4 news-left clearfix">
                    <img class="img-responsive" src="{{ file_url(new.image) }}"/>
                    <div class="news-type" {% if(new.color) %}style="background-color:{{ new.color }}" {% endif %}>
                        {{ new.subtitle }}
                    </div>
                </div>
                <div class="col-md-8 news-right">
                    <div class="news-background">
                        <div class="news-title">
                            {{ new.title|raw }}
                        </div>
                        <div class="news-date">{{ new.date|date("d/m/Y") }}</div>
                        <div class="news-content">
                            {{ new.text|raw }}
                        </div>
                        <div class="news-more">
                            <span class="cta btn-motion btn-1c">{{ "Lire la suite" |t }}</span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}

    <div class="row ">
        <div class="col-md-12 text-center">
            <a href="{{ path('view.news.page_1') }}">
                <div class="more-news cta btn-motion btn-1c">
                    {{ "+ d'actualités"|t }}
                </div>
            </a>
        </div>
    </div>
</div>
