<div class="news-twitter-block">
    <div class="row title">
        <div class="line col-md-3"></div>
        <div class=" col-md-3">
            <h2 class="news">{{ "Dernières actualités"|t }}</h2>
        </div>
        <div class="line col-md-1"></div>
        <div class="col-md-2">
            <h2 class="twitter">{{ "Tweets"|t }}</h2>
        </div>
        <div class="line col-md-3"></div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                {% for new in news %}
                    <div class="row">
                        <div class="col-md-4">
                            <div>
                                <img src="{{ new.image }}"/>
                            </div>
                            <div>
                                Mon jeu
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h3> {{ new.title }}</h3>
                            <p>
                                {{ new.text|raw }}
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="col-md-4 col-md-offset-1">
                Tweets
            </div>
        </div>
    </div>
</div>